<% @page_desc = @entry.text %>

<a href="/" class="btn-fixed">« Outras sugestões</a>
<div class="hero-unit">
    <div class="hero-unit-outer">
        <div class="hero-unit-inner">
            <h1><a href="/">O que falta em Coimbra?</a></h1>

            <div id="entry" class="container">
              <div id="entry-text">
                <h2><%= @entry.text %></h2>
                <% if @entry.created_at %>
                  <p><small>Sugerido em <%= @entry.created_at.strftime("%d/%m/%Y") %></small></p>
                <% end %>
              </div>
              <div  id="entry-votes" class="suggestion-votes">
                <%= partial(:vote_box, :locals => { :entry => @entry, :entry_page => true }) %>
              </div>
                <hr>
                <div class="fb-comments" data-href="http://oquefaltaemcoimbra.pt/entry/<%= @entry.id %>" data-num-posts="15" data-width="613" data-mobile="false"></div>
            </div>

        </div>
    </div>
</div>
