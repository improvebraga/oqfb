<span title="Baseado em <%= entry.vote_count %> voto<%= 's' if entry.vote_count != 1 %>."><%= entry.vote_score %></span><br/>
<form method="post" action="/vote">
    <input type="hidden" name="entry_id" value="<%= entry.id %>">
    <% if entry_page %><input type="hidden" name="vote_page" value="true"><% end %>
    <div class="btn-group">
        <button type="submit" name="up" value="true" class="btn btn-mini <%# 'btn-success' if entry.voted_up?(request.ip) %>" <%= 'disabled title="Obrigado pelo teu voto!"' if entry.already_voted?(request.ip) %> onClick="_gaq.push(['_trackEvent', 'Vote', 'UpVote', 'Main Page']);"><i class="icon-caret-up"></i></button>
        <button type="submit" name="up" value="false" class="btn btn-mini <%# 'btn-danger' if entry.voted_down?(request.ip) %>" <%= 'disabled title="Obrigado pelo teu voto!"' if entry.already_voted?(request.ip) %> onClick="_gaq.push(['_trackEvent', 'Vote', 'DownVote', 'Main Page']);"><i class="icon-caret-down"></i></button>
    </div>
</form>